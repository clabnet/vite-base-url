root=true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[*.{js,vue,css}]
charset = utf-8
indent_style = space
indent_size = 2
continuation_indent_size = 6
